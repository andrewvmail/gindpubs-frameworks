<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:layout_margin="0dp">

        <ImageView
            android:id="@+id/imgCover"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:contentDescription="@string/thumbImageDescription"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Title"

                android:fontFamily="Helvetica-Bold"
                android:textColor="#F7F6F9"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="Info"

                android:fontFamily="Helvetica"
                android:textColor="#DCDBDD"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="Date"

                android:fontFamily="Helvetica"
                android:textColor="#24B2DC"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="Size"

                android:fontFamily="Helvetica-Bold"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnDownload"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_margin="2dp"
                android:text="@string/download"

                android:fontFamily="Helvetica-Bold"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:minWidth="22dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#504F50" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="Progress"

                    android:fontFamily="Helvetica"
                    android:textColor="#A5A4A6"
                    android:textSize="11sp" />

                <ProgressBar
                    android:id="@+id/prgDownload"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:progressDrawable="@drawable/progressbar"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnRead"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_margin="2dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    android:text="@string/read"

                    android:fontFamily="Helvetica-Bold"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:minWidth="22dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="#504F50" />

                <Button
                    android:id="@+id/btnArchive"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_margin="2dp"
                    android:visibility="gone"
                    android:text="@string/archive"

                    android:fontFamily="Helvetica-Bold"
                    android:textColor="#504F50"
                    android:textSize="14sp"
                    android:minWidth="22dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>